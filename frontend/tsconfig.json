{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "Preserve",
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../globals.d.ts"],
  "exclude": ["dist", "node_modules"]
}
