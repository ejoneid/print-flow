{
  "name": "print-flow",
  "private": true,
  "workspaces": {
    "packages": ["backend", "frontend", "auth", "shared"],
    "catalog": {
      "supertokens-node": "22.1.0",
      "zod": "3.25.56",
      "ky": "1.8.1"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*end' dev",
    "dev:auth": "bun run --filter '!shared' dev:auth",
    "tsc": "bun run --filter '*' tsc",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.3.0",
    "husky": "^9.1.7"
  }
}
