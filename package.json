{
  "name": "print-flow",
  "private": true,
  "workspaces": {
    "packages": [
      "backend",
      "frontend",
      "auth",
      "shared"
    ],
    "catalog": {
      "supertokens-node": "22.1.0",
      "zod": "4.1.12",
      "ky": "1.14.0"
    }
  },
  "scripts": {
    "dev": "bun run --filter '*end' dev",
    "dev:auth": "bun run --filter '!shared' dev:auth",
    "tsc": "bun run --filter '*' tsc",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/bun": "1.3.0",
    "husky": "9.1.7"
  }
}
